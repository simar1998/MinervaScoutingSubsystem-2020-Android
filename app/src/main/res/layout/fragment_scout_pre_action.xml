<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/initInfo_field_imgView"
        android:layout_width="1019dp"
        android:layout_height="538dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/init_info_field" />

    <TextView
        android:id="@+id/enterBotPos_info_txtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="408dp"
        android:layout_marginBottom="572dp"
        android:text="Enter Robot Starting Position \n using the slider bar on the sector line"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ProgressBar
        android:id="@+id/start_pos_progressbr"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="545dp"
        android:layout_height="538dp"
        android:layout_marginEnd="580dp"
        android:rotation="90"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ProgressBar
        android:id="@+id/start_pos_red_progressbr"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="532dp"
        android:layout_height="538dp"
        android:layout_marginStart="576dp"
        android:rotation="90"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <SeekBar
        android:id="@+id/start_pos_blue_seekbar"
        android:layout_width="568dp"
        android:layout_height="519dp"
        android:layout_marginEnd="540dp"
        android:layout_marginBottom="16dp"
        android:indeterminate="false"
        android:progress="50"
        android:progressBackgroundTint="@android:color/holo_orange_light"
        android:rotation="90"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/initInfo_field_imgView" />

    <SeekBar
        android:id="@+id/start_pos_red_seekbar"
        android:layout_width="555dp"
        android:layout_height="522dp"
        android:layout_marginStart="542dp"
        android:layout_marginBottom="16dp"
        android:indeterminate="false"
        android:progress="50"
        android:progressBackgroundTint="@android:color/holo_orange_light"
        android:rotation="90"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/pre_pre_btn"
        android:layout_width="270dp"
        android:layout_height="51dp"
        android:layout_marginEnd="612dp"
        android:text="Pre-Match Setup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/actions_pre_btn"
        android:layout_width="188dp"
        android:layout_height="52dp"
        android:layout_marginEnd="348dp"
        android:text="Atuo + Teleop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/post_pre_btn"
        android:layout_width="196dp"
        android:layout_height="48dp"
        android:layout_marginEnd="84dp"
        android:text="Endgame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/submit_pre_btn"
        android:layout_width="258dp"
        android:layout_height="165dp"
        android:layout_marginEnd="380dp"
        android:layout_marginBottom="16dp"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/robot_pos_blue_txtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="780dp"
        android:layout_marginBottom="264dp"
        android:text="Robot Starting position"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/robot_pos_red_txtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="556dp"
        android:layout_marginBottom="408dp"
        android:text="Robot Starting position"
        android:textColor="@android:color/black"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/teamNumInfor_pre_txtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="620dp"
        android:text="Currently scouting:"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/preLoad_description_txtView"
        android:layout_width="131dp"
        android:layout_height="54dp"
        android:layout_marginEnd="224dp"
        android:layout_marginBottom="248dp"
        android:text="Enter the number of balls loaded in your robot"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/initInfo_field_imgView" />

    <RadioGroup
        android:layout_width="142dp"
        android:layout_height="141dp"
        android:layout_marginEnd="200dp"
        android:layout_marginBottom="99dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RadioButton
            android:id="@+id/preLoadedBalls0_radioBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0" />

        <RadioButton
            android:id="@+id/preLoadedBalls1_radioBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1" />

        <RadioButton
            android:id="@+id/preLoadedBalls2_radioBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2" />

        <RadioButton
            android:id="@+id/preLoadedBalls3_radioBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>